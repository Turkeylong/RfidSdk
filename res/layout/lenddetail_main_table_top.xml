<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_green"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:shrinkColumns="1" >

            <TableRow style="@style/tableLayoutStyle" >

                <TextView
                    style="@style/textStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/department_text" />

                <View style="@style/shortLineStyle" />

                <LinearLayout
                    style="@style/itemStyle"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/department"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="@string/department_text_val" />
                </LinearLayout>

                <View style="@style/shortLineStyle" />

                <TextView
                    style="@style/textStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/demand_tiem_text" />

                <View style="@style/shortLineStyle" />

                <LinearLayout
                    style="@style/itemStyle"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/demand_date"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true" />
                </LinearLayout>

                <View style="@style/shortLineStyle" />

                <TextView
                    style="@style/textStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/notice_no_text" />

                <View style="@style/shortLineStyle" />

                <LinearLayout
                    style="@style/itemStyle"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/notice_no"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </TableRow>

            <TableRow style="@style/tableLayoutLastStyle" >

                <TextView
                    style="@style/textStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/warehouse_text" />

                <View style="@style/shortLineStyle" />

                <LinearLayout
                    style="@style/itemStyle"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/warehouse"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="@string/warehouse_text_val" />
                </LinearLayout>

                <View style="@style/shortLineStyle" />

                <TextView
                    style="@style/textStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/worker_text" />

                <View style="@style/shortLineStyle" />

                <LinearLayout
                    style="@style/itemStyle"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/repairOrderEdit"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white_btn"
                        android:gravity="center|left"
                        android:visibility="invisible"
                        android:singleLine="true" />
                </LinearLayout>

                <View style="@style/shortLineStyle" />

                <TextView
                    style="@style/textStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/requisition_text" />

                <View style="@style/shortLineStyle" />

                <LinearLayout
                    style="@style/itemStyle"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/requisition"
                        style="@style/textStyle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="@string/requisition_text_val" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>