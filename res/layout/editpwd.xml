<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dialogStyle"
    android:gravity="center|top"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/titleStyle"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/edit_pwd_text"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/closeEditBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/delete" />
    </RelativeLayout>

    <LinearLayout
        style="@style/itemStyle"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curr_pwd_text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/long_white_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/curr_pwd_edit"
                style="@style/textStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:digits="@string/english_password_digits"
                android:hint="@string/curr_pwd_hint_text"
                android:maxLength="30"
                android:password="true" />

            <ImageView
                android:id="@+id/zk_curr_delete"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/delete"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/itemStyle"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_pwd_text" />

        <LinearLayout
            style="@style/itemStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/long_white_bg"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/login_pwd_new_edit"
                style="@style/textStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:digits="@string/english_password_digits"
                android:hint="@string/new_pwd_text_hint_text"
                android:maxLength="30"
                android:password="true" />

            <ImageView
                android:id="@+id/zk_new_delete"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/delete"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/itemStyle"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_pwd_ag_text" />

        <LinearLayout
            style="@style/itemStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/long_white_bg"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/login_pwd_new_ag_edit"
                android:layout_width="0dp"
                 style="@style/textStyle"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:digits="@string/english_password_digits"
                android:hint="@string/new_pwd_text_hint_ag_text"
                android:maxLength="30"
                android:password="true" />

            <ImageView
                android:id="@+id/zk_newag_delete"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/delete"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/itemStyle"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit_clear_btn"
            style="@style/clickBtnNoPercentStyle"
            android:text="@string/edit_clear" />

        <Button
            android:id="@+id/edit_submit_btn"
            style="@style/clickBtnNoPercentStyle"
            android:layout_marginLeft="20dp"
            android:text="@string/edit_submit" />
    </LinearLayout>

</LinearLayout>