<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center|top"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/dialogStyle"
        android:layout_width="550dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/titleId"
                style="@style/titleStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/scan_detail_title"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/delete" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/line_green"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:shrinkColumns="1" >

                    <TableRow style="@style/tableLayoutStyle" >

                        <TextView
                            style="@style/textStyle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/scan_detail_sn" />

                        <View style="@style/shortLineStyle" />

                        <LinearLayout
                            style="@style/itemStyle"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/scanDetailSn"
                                style="@style/textStyle"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|left" />
                        </LinearLayout>

                        <View style="@style/shortLineStyle" />

                        <TextView
                            style="@style/textStyle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/query_number" />

                        <View style="@style/shortLineStyle" />

                        <LinearLayout
                            style="@style/itemStyle"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="4"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/materialId"
                                style="@style/textStyle"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|left" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow style="@style/tableLayoutStyle" >

                        <TextView
                            style="@style/textStyle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/scan_detail_count" />

                        <View style="@style/shortLineStyle" />

                        <LinearLayout
                            style="@style/itemListStyle"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/scanDetailCount"
                                style="@style/textStyle"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:gravity="center|left"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <View style="@style/shortLineStyle" />

                        <TextView
                            style="@style/textStyle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/scan_detail_name" />

                        <View style="@style/shortLineStyle" />

                        <LinearLayout
                            style="@style/itemListStyle"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="4"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/materialName"
                                style="@style/textStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow style="@style/tableLayoutLastStyle" >

                        <TextView
                            style="@style/textStyle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/scan_detail_upcount" />

                        <View style="@style/shortLineStyle" />

                        <LinearLayout
                            style="@style/itemStyle"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/scanDetailUpCount"
                                style="@style/textStyle"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rect_white_btn"
                                android:gravity="center|left"
                                android:hint="@string/scan_detail_upcount_hint"
                                android:inputType="number"
                                android:singleLine="true" />

                            <TextView style="@style/redNotNullStyle" />
                        </LinearLayout>

                        <View style="@style/shortLineStyle" />

                        <TextView
                            style="@style/textStyle"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/storage_pos_text" />

                        <View style="@style/shortLineStyle" />

                        <LinearLayout
                            style="@style/itemStyle"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="4"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/boxPos"
                                style="@style/textStyle"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|left" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/update_submit"
                    style="@style/clickBtnNoPercentStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/scan_detail_submit" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>