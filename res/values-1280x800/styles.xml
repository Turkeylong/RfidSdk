<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="longinImgStyle">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialogStyle">
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rect_white_btn</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="titleBgStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/headbg</item>
        <item name="android:gravity">center</item>
    </style>

